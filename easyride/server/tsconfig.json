{
    "compilerOptions": {
      "module": "ESNext",          // Используем ES модули
      "moduleResolution": "Node",  // Для корректного разрешения путей модулей
      "target": "ESNext",          // Современные возможности JS
      "outDir": "./dist",          // Папка для сборки
      "esModuleInterop": true,     // Для совместимости с CommonJS
      "strict": true,              // Включаем строгую типизацию
      "skipLibCheck": true,        // Пропускаем проверку библиотек
      "forceConsistentCasingInFileNames": true, // Для корректной работы на разных ОС
      "baseUrl": ".",              // Указываем базовый путь
      "paths": {
        "*": ["node_modules/*", "src/types/*"]  // Если нужно работать с типами
      }
    },
    "include": [
      "server.ts",                 // Включаем корневые файлы
      "lib/**/*.ts"                // Включаем все файлы в папке lib
    ]
  }
  