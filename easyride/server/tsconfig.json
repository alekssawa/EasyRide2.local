{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",         // ✅ ОБЯЗАТЕЛЬНО
    "noEmit": true,                        // ✅ ОБЯЗАТЕЛЬНО
    "allowImportingTsExtensions": true,    // ✅ для импорта с .ts
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "."
  },
  "include": [
    "server.ts",
    "lib/**/*.ts",
    "routes/**/*.ts"                       // ✅ добавить папку routes
  ]
}
